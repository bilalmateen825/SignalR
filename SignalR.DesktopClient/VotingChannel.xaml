<UserControl x:Class="DesktopClient.VotingChannel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient"
             mc:Ignorable="d"  Height="100"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="NaN" Width="NaN">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <Button x:Name="Vote" Padding="10 10" Margin="25" Click="Vote_Click" IsEnabled="False">
                Vote
            </Button>
            <Button x:Name="VoteCounterConnection" Padding="10 10" Margin="10" Click="VoteCounterConnection_Click" Height="50" Width="204">
                Connect to Vote Counter
            </Button>          
        </StackPanel>
    </Grid>
</UserControl>
